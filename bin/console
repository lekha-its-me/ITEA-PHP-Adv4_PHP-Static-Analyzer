#!/usr/bin/env php
<?php

use Greeflas\StaticAnalyzer\Command\ClassAuthorStat;
use Greeflas\StaticAnalyzer\Command\ClassAnalyzeCommand;
use Symfony\Component\Console\Application;

require_once __DIR__ . '/../vendor/autoload.php';

$application = new Application('PHP Static Analyzer', '1.0.1');

$application->add(new ClassAuthorStat());
$application->add(new ClassAnalyzeCommand());

$exitCode = $application->run();

exit($exitCode);
